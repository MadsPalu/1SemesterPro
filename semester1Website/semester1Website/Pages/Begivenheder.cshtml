@page
@model semester1Website.Pages.BegivenhederModel
@{
    ViewData["Title"] = "Begivenheder";
}
<p>Begivenheder, wip</p>

<form method="post">
    <div class="form-group">
        <label for="Title">Titel</label>
        <input type="text" class="form-control" id="Title" placeholder="Titel">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group"
        <label for="Date">Dato</label>
        <input type="=Date" class="form-control" id="dato" placeholder="yyyy-mm-dd">
        <span asp-validation-for="Date" class="text-danger"></span>
    <div class="form-group">
        <label for="Description">Beskrivelse</label>
        <textarea class="form-control" id="beskrivelse" rows="3" placeholder="Beskrivelse"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Gem begivenhed</button>
</form>

@if (Model.NewEvent != null)
{
    <h3>Begivenhed</h3>
    <p>Titel: @Model.Title</p>
    <p>Dato: @Model.Date</p>
    <p>Beskrivelse: @Model.Description</p>
}